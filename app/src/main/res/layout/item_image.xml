<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey300">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:textSize="12sp"
        android:textColor="@color/colorBlackOpacity50"
        android:text="@string/message_thumbnail_not_exist"
        android:visibility="gone"
        android:padding="5dp"/>

    <FrameLayout
        android:id="@+id/layout_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorTeal300"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorTeal300"
            android:layout_gravity="bottom"/>
        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/colorTeal300"/>
        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/colorTeal300"
            android:layout_gravity="end"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/layout_number"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/round_rectangle_background"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"/>
    </LinearLayout>

</FrameLayout>